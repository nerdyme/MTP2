<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:fillViewport="true">

<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/root"
    android:stretchColumns="*"
    android:background="@drawable/back3"
    android:gravity = "center_horizontal"
    android:layout_marginStart = "15dp"
    android:layout_marginEnd = "15dp"
    >

    <TableRow android:layout_margin="0dip"
       >

        <Button
            android:id="@+id/contact"
            android:background="@drawable/nice_button"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:text="@string/Add_a_contact"
            android:layout_width="fill_parent" />


    </TableRow>
    <TableRow android:layout_margin="0dip">
        <Button
            android:id="@+id/createnewgroup"
            android:layout_width="0dip"
            android:background="@drawable/nice_button"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:text="@string/Create_New_Contact_Group"
            android:layout_weight="1" />

    </TableRow>
    <TableRow android:layout_margin="0dip">
        <Button
        android:id="@+id/audio"
        android:layout_width="0dip"
        android:background="@drawable/nice_button"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:textColor="#fff"
        android:textStyle="bold"
        android:text="@string/Record_Audio"
        android:layout_weight="1"
         />

    </TableRow>
    <TableRow android:layout_margin="0dip"
        android:id="@+id/first_row">
        <Button
            android:id="@+id/message"
            android:layout_width="0dip"
            android:background="@drawable/nice_button"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:text="@string/Send_Message"
            android:layout_weight="1"
             />
    </TableRow>
    <TableRow android:layout_margin="0dip">
        <Button
            android:id="@+id/survey"
            android:layout_width="0dip"
            android:background="@drawable/nice_button"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:text="@string/Pick_Survey"
            android:layout_weight="1" />

    </TableRow>


</TableLayout>
    </ScrollView>