<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".MainActivity" >

<LinearLayout
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_alignParentBottom="true"
android:layout_alignParentLeft="true"
android:layout_alignParentRight="true"
android:layout_alignParentTop="true"
android:background="@drawable/back3"
android:orientation= "vertical" >

<TextView
    android:id="@+id/textView1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Pin Authentication"
    android:gravity="center"
    android:textColor="#000000"
    android:layout_marginTop="20dp"
    android:textStyle="bold"
    android:layout_marginBottom="20dp"
    android:textAppearance="?android:attr/textAppearanceLarge" />

<View
    android:layout_width="fill_parent"
    android:layout_height="2dp"
    android:layout_marginBottom="10dp"
    android:background="#C0C0C0"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:text="GramVaani Sochna"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000"
        android:textSize="25sp"
        android:typeface="serif" />

    <EditText
        android:id="@+id/phonevalue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter the registered number"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:textColor="#000"
        android:textSize="20dp"
        android:inputType="number" >
        <requestFocus />
    </EditText>



    <EditText
        android:id="@+id/pinvalue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter the received PIN"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:textColor="#000"
        android:textSize="20dp"
        android:inputType="numberPassword" >
        <requestFocus />
    </EditText>



    <Button
        android:id="@+id/pinsubmit"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="@drawable/nice_button"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:textColor="#fff"
        android:textStyle="bold"
        android:text="Authenticate PIN" />

    <TextView
        android:id="@+id/forgetpin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="Forget your PIN No.?"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:clickable="true"/>

</LinearLayout>
<TextView
    android:id="@+id/textView3"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="Powered by www.grammvaani.org"
    android:textColor="@color/abc_background_cache_hint_selector_material_dark"
    android:gravity="center"
    android:layout_gravity="bottom"
    android:layout_alignParentBottom="true"
    android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>

