<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.surbhi.sample1.message1"
    android:background="@drawable/back3">

    <TextView
        android:id="@+id/msg1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="64dp"
        android:text="Type your message here :"
        android:singleLine="true"
        android:textColor="#ff0000"
        android:layout_centerInParent="true"
        android:typeface="sans"
        android:textSize="30dp" />

    <EditText
        android:id="@+id/msg1_value"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@+id/msg1"
        android:layout_marginTop="100dp"
        android:ems="10"
        android:inputType="textMultiLine" >

        <requestFocus />
    </EditText>

    <ImageButton
        android:id="@+id/btnSpeak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:layout_marginTop="325dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ico_mic"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"

        android:scaleX="0.5"
        android:scaleY="0.5"/>

    <Button
        android:id="@+id/pick"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:background="@drawable/nice_button"
        android:text="Pick Contacts" />

    <requestFocus
        android:layout_alignTop="@+id/msg1_value"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
